{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".log",
    "coverage",
    "node_modules/**/node_modules",
    "test/node/**/*",
    "test/api/**/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "watch": [
    "*.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
